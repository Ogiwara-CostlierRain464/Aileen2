<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:id="@+id/grid_video_item"
    android:theme="@style/VideoItem">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="3">

        <!-- 一番でかいやつ -->
        <FrameLayout
            android:id="@+id/grid_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_rowWeight="1">

            <TextView
                android:id="@+id/playlist_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="PlaylistId"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/playlist_title"
                android:layout_width="wrap_content"
                android:layout_height="22sp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="5dp"
                android:text="Title"
                android:theme="@style/TitleText" />

            <ImageView
                android:id="@+id/playlist_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                cardview:srcCompat="@mipmap/label" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/grid_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="1">

            <ImageView
                android:elevation="7dp"
                android:id="@+id/thumbnail_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                cardview:srcCompat="@color/cardview_shadow_start_color" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/grid_5"
            android:elevation="7dp"
            android:layout_column="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="1">

            <ImageView
                android:id="@+id/thumbnail_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                cardview:srcCompat="@color/cardview_shadow_start_color" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/grid_4"
            android:elevation="7dp"
            android:layout_column="2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="1">

            <ImageView
                android:id="@+id/thumbnail_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                cardview:srcCompat="@color/cardview_shadow_start_color" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/grid_3"
            android:elevation="7dp"
            android:layout_column="2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1">

            <ImageView
                android:id="@+id/thumbnail_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                cardview:srcCompat="@color/cardview_shadow_start_color" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/grid_2"
            android:elevation="7dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1">

            <ImageView
                android:id="@+id/thumbnail_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                cardview:srcCompat="@color/cardview_shadow_start_color" />
        </FrameLayout>

    </GridLayout>
</android.support.v7.widget.CardView>